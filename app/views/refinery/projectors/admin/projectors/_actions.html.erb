<ul>
  <% if ::Refinery::Projectors::Admin::ProjectorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.projectors_admin_projectors_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_projectors_admin_projector_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Projectors::Admin::ProjectorsController.sortable? && ::Refinery::Projectors::Projector.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Projectors"),
                 refinery.projectors_admin_projectors_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Projectors"),
                 refinery.projectors_admin_projectors_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
